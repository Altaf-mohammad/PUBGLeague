<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.league.pubgleague.SettingsFragment">

    <TextView
        android:id="@+id/settingstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="18dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Settings"
        android:textColor="@android:color/black"
        android:textSize="32dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/settingsprofile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/settingstext"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/PUBGColor"
        android:backgroundTint="@color/PUBGColor"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pubgguy"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:src="@drawable/pubgguy" />

            <TextView
                android:id="@+id/pubgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pubgguy"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nunito_semibold"
                android:text=" "
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paytmnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pubgname"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito_semibold"
                android:text=" "
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/wallettext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsprofile"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Wallet"
        android:textColor="#FF221F14"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Helptext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallettext"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Help"
        android:textColor="#FF221F14"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/logouttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Helptext"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Logout"
        android:textColor="#ff0000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/amounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="22dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="â‚¹ 0"
        android:textColor="#005804"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>